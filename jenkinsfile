pipeline {
    agent any
    tools {
        maven 'maven'  
    }
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/SnehaChaursia/DevOpsTest.git'
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
        stage('Run JAR') {
            steps {
                script {
                  
                    def output = sh(script: 'java -jar target/simple-java-project-1.0-SNAPSHOT.jar', returnStdout: true).trim()

                    echo "Output from JAR: ${output}"
                }
            }
        }
    }
}