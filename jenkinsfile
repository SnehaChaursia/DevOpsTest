pipeline {
    agent any
tool {
    node js'Node JS'
}
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/SnehaChaursia/DevOpsTest.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }
        stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
