pipeline{
    agent any 
    tools {
        nodejs 'nodejs'
    }
    stages {
        stage ('run'){
            steps{
                sh 'npm install'
            }
        }
        stage ('build'){
            steps{
                sh 'npm test' 
                 echo "No tests defined"
            }
        }
        stage('run') {
            steps('build'){
                sh 'npm run build'  
            }
        }
    }
}
